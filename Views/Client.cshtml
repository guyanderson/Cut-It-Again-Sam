@{
  Layout="Shared/_Layout.cshtml";
}


@if (@Model.Count == 0)
{
  <br>
  <br>
  <br>
  <h1>Your clients = nada!</h1>
  <br>
  <h3>Yikes! How are you still in business?!</h3>
}
else
{
  <h1>Here is your list of clients:</h1>
  <ul>
    @foreach (var client in Model)
    {
      <li>@client.GetName()</li>
    }
  </ul>
  <br>
  <form action="/client/delete" method="post">
    <button type="submit">Clear all clients</button>
  </form>
}
<br>
<p><a href="/client/new">Add a new client</a></p>
<br>
<p><a href="/">Return home</a></p>
