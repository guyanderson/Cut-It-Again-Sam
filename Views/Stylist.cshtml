@{
  Layout="Shared/_Layout.cshtml";
}

<br>
<br>
<h1>All Stylists:</h1>
<br>
<br>
@if (@Model.Count == 0)
{
  <p>You have nobody working here!</p>
}
<ul>
  @foreach (var stylist in Model)
  {
    <li><a href="/stylist/@stylist.GetId()">@stylist.GetName()</a></li>
  }
</ul>
<br>
<a href="/stylist/new">Add a new stylist to your team.</a>
<br>
<br>
<br>
<form action="/stylist/delete" method="post">
  <button type="submit">Clear all stylists</button>
</form>
<br>
<br>
<p><a href="/">Return home</a></p>
